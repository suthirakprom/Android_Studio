<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="146dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <Button
            android:text="Start Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startService" android:onClick="start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <Button
            android:text="Stop Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopService" android:onClick="stop" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/startService"/>

</androidx.constraintlayout.widget.ConstraintLayout>