<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:onClick="Demo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/stop"/>
    <Button
            android:text="@string/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" android:layout_marginStart="78dp"
            app:layout_constraintStart_toEndOf="@+id/start" android:onClick="Demo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="79dp"
            app:layout_constraintHorizontal_bias="0.903"/>
    <Button
            android:text="@string/start_new_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newActivity"
            android:onClick="Demo"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.6"
            app:layout_constraintTop_toBottomOf="@+id/stop"/>

</androidx.constraintlayout.widget.ConstraintLayout>